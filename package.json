{
  "name": "touchstone-risk-analysis",
  "version": "1.0.0",
  "description": "Risk Analysis Widget for Zendesk",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build": "webpack --mode production",
    "prepackage": "npm run build && rm -rf tmp",
    "package": "mkdir -p tmp && cp -r assets dist manifest.json translations tmp/ && cd tmp && zat package && cd .. && cp tmp/*.zip . && rm -rf tmp",
    "dev": "webpack --mode development --watch",
    "dev:server": "nodemon server.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "security-fix": "npm audit fix"
  },
  "dependencies": {
    "@babel/runtime": "^7.x.x",
    "core-js": "^3.x.x",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-runtime": "^7.x.x",
    "@babel/preset-env": "^7.26.0",
    "babel-loader": "^9.2.1",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "process": "^0.11.10",
    "terser-webpack-plugin": "^5.x.x",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "glob": "^10.3.10"
  },
  "zendesk": {
    "name": "TouchStone Risk Analysis",
    "author": {
      "name": "Your Name",
      "email": "your.email@example.com"
    },
    "defaultLocale": "en",
    "private": true,
    "location": {
      "support": {
        "ticket_sidebar": "assets/iframe.html"
      }
    },
    "version": "1.0.0",
    "frameworkVersion": "2.0",
    "permissions": {
      "support": [
        "ticket_sidebar",
        "ticket.comments"
      ]
    },
    "parameters": [
      {
        "name": "allowedOrigins",
        "type": "hidden",
        "default": "*.zendesk.com *.zdassets.com"
      }
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/vendor/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text-summary"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
